<body>
<main class="container my-4">
    {{#if user}}
    
        <form>
            <div class="form-group">
                <label for="exampleFormControlInput1">Title</label>
                <input type="text" class="form-control" id="postTitle" placeholder="Enter a title!">
            </div>

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Content</label>
                <textarea class="form-control" placeholder="Write your thoughts!" id="postContent"
                    rows="3"></textarea>
            </div>

            <a type="button" id="submitNewPost" class="btn btn-primary btn-lg btn-block">Submit</a>
        </form>
        {{/if}}
        {{{body}}}
    </main>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
